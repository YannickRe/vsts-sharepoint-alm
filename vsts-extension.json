{
    "manifestVersion": 1,
    "id": "sharepoint-alm",
    "name": "SharePoint ALM",
    "version": "0.1.0",
    "publisher": "yannickr",
    "description": "Provides tasks that leverage the SharePoint ALM API's from TFS/Team Services build or release definition",
    "categories": [
        "Build and release"
    ],
    "tags": [
        "deploy",
        "release",
        "sharepoint",
        "alm",
        "tenant",
        "app",
        "spfx"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "icons": {
        "default": "icon.png"
    },
    "visibility": [
        "Build and release"
    ],
    "content":{
        "details": {
            "path": "docs/sharepointalm-README.md"
        }
    },
    "files": [
        {
            "path": "_build/Tasks/SharePointALMTenantScoped"
        },
        {
            "path": "_build/Tasks/SharePointALMSiteScoped"
        }
    ],
    "scope": [
        "vso.build",
        "vso.serviceendpoint"
    ],
    "contributions": [
        {
            "id": "tenant-scoped-actions",
            "type": "ms.vss-distributed-task.task",
            "targets": [ "ms.vss-distributed-task.tasks" ],
            "properties": {
                "name": "_build/Tasks/SharePointALMTenantScoped"
            }
        },
        {
            "id": "sharepoint-scoped-actions",
            "type": "ms.vss-distributed-task.task",
            "targets": [ "ms.vss-distributed-task.tasks" ],
            "properties": {
                "name": "_build/Tasks/SharePointALMSiteScoped"
            }
        }
    ]
}